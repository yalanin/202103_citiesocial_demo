<% if current_cart.empty? %>
  <div class="has-text-centered mt-4">
    <p class="mb-4">沒有選購任何品項</p>
    <%= link_to '繼續選購', root_path, class: 'button is-primary is-normal' %>
  </div>
<% else %>
  <div class="mb-4 is-pulled-right">
    <%= link_to '繼續選購', root_path, class: 'button is-normal' %>
    <%= link_to '結帳', checkout_cart_path, class: 'button is-danger is-normal' %>
  </div>
  <div class="is-clearfix"></div>
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>品項</th>
        <th>單價</th>
        <th>數量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% current_cart.items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.sell_price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.total_price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">總價</td>
        <td><%= current_cart.total_price %></td>
      </tr>
    </tfoot>
  </table>
<% end %>